<section class="cta-section" id="contact">
    <div class="cta-content">
        <h2 class="cta-title">{{ section.settings.heading | default: "Hi, I'm Nic. Let's automate your success." }}</h2>
        <p class="cta-description">
            {{ section.settings.description | default: "Ready to work smarter, not harder? Let's discuss how intelligent design and AI automation can take your business to the next level. Book a free consultation today." }}
        </p>
        {% if section.settings.button_url != blank %}
            <a href="{{ section.settings.button_url }}" class="btn btn-cta">{{ section.settings.button_text | default: 'Schedule a Consultation' }}</a>
        {% else %}
            <button class="btn btn-cta">{{ section.settings.button_text | default: 'Schedule a Consultation' }}</button>
        {% endif %}
    </div>
</section>

{% schema %}
{
    "name": "Call to Action",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Hi, I'm Nic. Let's automate your success."
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Ready to work smarter, not harder? Let's discuss how intelligent design and AI automation can take your business to the next level. Book a free consultation today."
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Schedule a Consultation"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL",
            "info": "Leave blank for a button that opens a contact form"
        }
    ],
    "presets": [
        {
            "name": "Call to Action"
        }
    ]
}
{% endschema %}
