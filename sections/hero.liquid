<section class="hero">
    <div class="hero-content">
        <span class="hero-label">{{ section.settings.label | default: 'Design . AI . Automation' }}</span>
        <h1>{{ section.settings.heading | default: 'Smart design.' }} <span class="highlight">{{ section.settings.heading_highlight | default: 'Smarter business.' }}</span></h1>
        <p class="hero-description">
            {{ section.settings.description | default: 'We craft stunning websites and implement AI automation solutions that turn visitors into customers and mundane tasks into streamlined workflows. Partnering with businesses ready to level up.' }}
        </p>
        <div class="cta-group">
            <a href="{{ section.settings.primary_button_link | default: '#contact' }}" class="btn btn-primary">{{ section.settings.primary_button_text | default: 'Start Your Project' }}</a>
            <a href="{{ section.settings.secondary_button_link | default: '#services' }}" class="btn btn-secondary">{{ section.settings.secondary_button_text | default: 'Explore Services' }}</a>
        </div>
    </div>
    <div class="hero-visual">
        {% for block in section.blocks %}
            <div class="visual-card card-{{ forloop.index }}" style="--rotate: {{ block.settings.rotation }}deg;">
                <div class="card-icon">{{ block.settings.icon }}</div>
                <div class="card-title">{{ block.settings.title }}</div>
                <div class="card-text">{{ block.settings.text }}</div>
            </div>
        {% endfor %}
