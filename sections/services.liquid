<section class="services" id="services">
    <div class="section-header">
        <div class="section-label">{{ section.settings.label | default: 'What We Do' }}</div>
        <h2 class="section-title">{{ section.settings.heading | default: 'Elevate your digital presence' }}</h2>
        <p class="section-description">
            {{ section.settings.description | default: 'From stunning web experiences to intelligent automation, we provide the tools modern businesses need to thrive in the digital age.' }}
        </p>
    </div>
    <div class="services-grid">
        {% for block in section.blocks %}
            <div class="service-card" {{ block.shopify_attributes }}>
                <div class="service-number">{{ block.settings.number | default: forloop.index | prepend: '0' }}</div>
                <h3 class="service-title">{{ block.settings.title }}</h3>
                <p class="service-description">{{ block.settings.description }}</p>
                <ul class="service-features">
                    {% assign features = block.settings.features | split: '|' %}
                    {% for feature in features %}
                        <li>{{ feature | strip }}</li>
                    {% endfor %}
                </ul>
                {% if block.settings.link_text != blank %}
                    <a href="{{ block.settings.link_url }}" style="display: inline-block; margin-top: 1.5rem; color: var(--clay); font-weight: 600; text-decoration: none; transition: transform 0.3s ease;">
                        {{ block.settings.link_text }} &rarr;
                    </a>
                {% endif %}
            </div>
        {% endfor %}

        {% if section.blocks.size == 0 %}
            <!-- Default services if no blocks configured -->
            <div class="service-card">
                <div class="service-number">01</div>
                <h3 class="service-title">Web Design & Development</h3>
                <p class="service-description">Custom websites that capture attention, build trust, and drive conversions. Every pixel crafted with purpose.</p>
                <ul class="service-features">
                    <li>Responsive design for all devices</li>
                    <li>SEO optimization built-in</li>
                    <li>Lightning-fast performance</li>
                    <li>User experience focused</li>
                    <li>Brand-aligned aesthetics</li>
                </ul>
            </div>
            <div class="service-card">
                <div class="service-number">02</div>
                <h3 class="service-title">AI Receptionist</h3>
                <p class="service-description">Never miss a customer inquiry. Our AI receptionists handle calls, answer questions, and book appointments 24/7.</p>
                <ul class="service-features">
                    <li>Natural conversation flow</li>
                    <li>Appointment scheduling</li>
                    <li>Multi-language support</li>
                    <li>CRM integration</li>
                    <li>Custom knowledge base</li>
                </ul>
            </div>
            <div class="service-card">
                <div class="service-number">03</div>
                <h3 class="service-title">Business Automation</h3>
                <p class="service-description">Automate repetitive tasks and free your team to focus on what matters. From email workflows to data processing.</p>
                <ul class="service-features">
                    <li>Custom workflow design</li>
                    <li>Email automation</li>
                    <li>Data synchronization</li>
                    <li>Report generation</li>
                    <li>Integration with existing tools</li>
                </ul>
            </div>
            <div class="service-card">
                <div class="service-number">04</div>
                <h3 class="service-title">AI Integration</h3>
                <p class="service-description">Harness the power of AI for your specific business needs. Custom solutions that give you a competitive edge.</p>
                <ul class="service-features">
                    <li>Chatbot development</li>
                    <li>Content generation tools</li>
                    <li>Customer insight analysis</li>
                    <li>Predictive analytics</li>
                    <li>Process optimization</li>
                </ul>
            </div>
        {% endif %}
    </div>
</section>

