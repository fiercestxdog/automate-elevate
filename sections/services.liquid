    "name": "Services",
    "settings": [
        {
            "type": "text",
            "id": "label",
            "label": "Section Label",
            "default": "What We Do"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Elevate your digital presence"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "From stunning web experiences to intelligent automation, we provide the tools modern businesses need to thrive in the digital age."
        }
    ],
    "blocks": [
        {
            "type": "service",
            "name": "Service",
            "settings": [
                {
                    "type": "text",
                    "id": "number",
                    "label": "Number",
                    "default": "01"
                },
                {
