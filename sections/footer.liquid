<footer>
    <div class="footer-content">
        <div>
            <div class="footer-brand">{{ section.settings.brand_name | default: shop.name }}</div>
            <p class="footer-tagline">{{ section.settings.tagline }}</p>
        </div>
        <div>
            <h4 class="footer-title">Services</h4>
            <ul class="footer-links">
                <li><a href="#services">Web Design</a></li>
                <li><a href="#services">AI Receptionist</a></li>
                <li><a href="#services">Automation</a></li>
                <li><a href="#services">AI Integration</a></li>
            </ul>
        </div>
        <div>
            <h4 class="footer-title">Company</h4>
            <ul class="footer-links">
                <li><a href="#process">Process</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#">Portfolio</a></li>
                <li><a href="#">About {{ section.settings.owner_name | default: 'Us' }}</a></li>
            </ul>
        </div>
        <div>
            <h4 class="footer-title">Connect</h4>
            <ul class="footer-links">
                {% if section.settings.linkedin_url != blank %}
                    <li><a href="{{ section.settings.linkedin_url }}">LinkedIn</a></li>
                {% endif %}
                {% if section.settings.twitter_url != blank %}
                    <li><a href="{{ section.settings.twitter_url }}">Twitter</a></li>
                {% endif %}
                {% if section.settings.instagram_url != blank %}
                    <li><a href="{{ section.settings.instagram_url }}">Instagram</a></li>
                {% endif %}
                {% if section.settings.email != blank %}
                    <li><a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved. Designed with intelligence and care.</p>
    </div>
</footer>

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "text",
            "id": "brand_name",
            "label": "Brand Name",
            "default": "Automate & Elevate"
        },
        {
            "type": "textarea",
            "id": "tagline",
            "label": "Tagline",
            "default": "Smart design. Smarter business. Transforming businesses through intelligent design and AI automation."
        },
        {
            "type": "text",
            "id": "owner_name",
            "label": "Owner Name",
            "default": "Nic"
        },
        {
            "type": "url",
            "id": "linkedin_url",
            "label": "LinkedIn URL"
        },
        {
            "type": "url",
            "id": "twitter_url",
            "label": "Twitter URL"
        },
        {
            "type": "url",
            "id": "instagram_url",
            "label": "Instagram URL"
        },
        {
            "type": "text",
            "id": "email",
            "label": "Contact Email",
            "default": "hello@automateandelevate.com"
        }
    ]
}
{% endschema %}
